{{ header }}
<div class="bread_crumbs">
  <ul>
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
    </ul>
</div>
<section class="articles_detail">
  <h2>{{ heading_title }}</h2>
    <div class="row_flex">
      {% if popup %}
      <div class="img"><img src="{{ popup }}" alt="{{ heading_title }}"></div>
      {% endif %}
      <div class="des">
        <div>
          <h3>{{ heading_title }}</h3>
          {{ preview }}
        </div>
      </div>
    </div>
    {{ description }}
</section>
{{ content_top }}
{% if articles %}
<div class="articles">
  <h2>{{ text_related }}</h2>
    <ul>
      {% for article in articles %}
      <li>
        <div class="img"><a href="{{ article['href'] }}"><img src="{{ article['thumb'] }}" alt="{{ article['name'] }}"></a></div>
        <div class="text">
          <h3>{{ article['name'] }}</h3>
          <a href="{{ article['href'] }}">Подробнее</a>
        </div>
      </li>
      {% endfor %}
    </ul>
</div>
{% endif %}
{{ content_bottom }}
{{ footer }}