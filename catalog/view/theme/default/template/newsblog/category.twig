{{ header }}
<div class="bread_crumbs">
  <ul>
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
    </ul>
</div>
<div class="articles">
  <h2>{{ heading_title }}</h2>
    {% if articles %}
    <ul>
      {% for article in articles %}
      <li>
        <div class="img"><a href="{{ article['href'] }}"><img src="{{ article['thumb'] }}" alt="{{ article['name'] }}"></a></div>
          <div class="text">
            <h3>{{ article['name'] }}</h3>
            <a href="{{ article['href'] }}">Подробнее</a>
          </div>
      </li>
      {% endfor  %}
    </ul>
    {% endif  %}
</div>
{% if not categories and not articles %}
<p>{{ text_empty }}</p>
<div class="buttons">
  <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
</div>
{% endif %}
{{ content_bottom }}
{{ footer }}